# Production environment template for Hackathon Registration and Management System

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<db_user>:<db_password>@<cluster>/<db_name>?retryWrites=true&w=majority&appName=Cluster0

# Security
JWT_SECRET=replace_with_a_long_random_secret_min_32_chars
JWT_EXPIRATION_MS=86400000
FACULTY_SECRET_CODE=KLHAZ
ADMIN_EMAIL=faculty@hackathon.com
ADMIN_PASSWORD=Admin@123

# Razorpay (required for live payments)
PAYMENT_MOCK_ENABLED=false
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxx

# Optional fee config
PAYMENT_FEE_SPLIT_MEMBERS=4

# Participant email verification + password reset
EMAIL_ENABLED=true
# Keep EMAIL_FROM as a Brevo-verified sender. Leave blank to fallback to SMTP_USERNAME.
EMAIL_FROM=no-reply@hackathonregister123.com
APP_BASE_URL=https://your-app-domain.com
USER_EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_TTL_MINUTES=1440
PASSWORD_RESET_TTL_MINUTES=30

# SMTP (Brevo free tier example)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USERNAME=your_brevo_login
SMTP_PASSWORD=your_brevo_smtp_key
SMTP_AUTH=true
SMTP_STARTTLS_ENABLE=true
SMTP_CONNECTION_TIMEOUT=5000
SMTP_TIMEOUT=5000
SMTP_WRITE_TIMEOUT=5000

# Optional fallback when SMTP ports are blocked (uses HTTPS 443)
BREVO_API_KEY=
BREVO_API_URL=https://api.brevo.com/v3/smtp/email
